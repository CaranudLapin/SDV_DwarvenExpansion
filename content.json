{
    "Format": "2.0.0",
    "ConfigSchema": {
        "EnabledMachines": {
            "AllowValues": "GemPolisher, Pulverizer, DwarvenStill, AlchemyBench",
            "AllowMultiple": true,
            "AllowBlank": true,
            "Default": "GemPolisher, Pulverizer, DwarvenStill, AlchemyBench"
        }
    },
    "Changes": [
        {
            "Action": "Include",
            "FromFile": "assets/Objects/objects.json"
        },
        {
            "Action": "Include",
            "FromFile": "assets/Objects/recipes.json"
        },
        {
            "Action": "Include",
            "FromFile": "assets/BigCraftables/GemPolisher/big-craftable.json",
            "When": {
                "EnabledMachines": "GemPolisher"
            }
        },
        {
            "Action": "Include",
            "FromFile": "assets/BigCraftables/Pulverizer/big-craftable.json",
            "When": {
                "EnabledMachines": "Pulverizer"
            }
        },
        {
            "Action": "Include",
            "FromFile": "assets/BigCraftables/DwarvenStill/big-craftable.json",
            "When": {
                "EnabledMachines": "DwarvenStill"
            }
        },
        {
            "Action": "Include",
            "FromFile": "assets/BigCraftables/AlchemyBench/big-craftable.json",
            "When": {
                "EnabledMachines": "AlchemyBench"
            }
        }
    ]
}